@{
    ViewBag.Title = "Home Page";
}
@*@model IList<TestingSystem.Web.Models.CategoryViewModel>
*@

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-sm-12" id="categoriesGrid">
        <div class="row">
            @for (int i = 0; i < 7; i++)
            {
                string classId = "category" + i;

                <div class="col-md-3 col-sm-4 col-xs-6">
                    <div class="thumbnail text-center category-thumbnail" id="@classId" onmouseover="vibrantColorBG('@classId')" onmouseout="restoreBG('@classId')">
                        <button class="close"><span class="glyphicon glyphicon-wrench" onclick="showCategoryEditModal()"></span></button>
                        <a class="btn btn-link" onclick="showDescription('@classId')">
                            <img class="img-responsive center-block category-img" alt="..." src="~/Content/Images/csharp.png">
                        </a>
                    </div>
                    <br />
                </div>
            }
            <div class="col-md-3 col-sm-4 col-xs-6">
                <div class="thumbnail text-center category-thumbnail" id="addNewCategory" onmouseover="colorBG(this,'#6f137c')" onmouseout="restoreBG('addNewCategory')">
                    <a class="btn btn-link" onclick="showCategoryCreateModal()">
                        <img class="img-responsive center-block category-img" src="data:image/svg+xml;utf8;base64," />
                    </a>
                </div>
                <br />
            </div>
        </div>
    </div>
    <div id="aditionalInfoPanel">
    </div>
</div>

<div class="modal fade" id="newCategoryModal" rolde="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span></button>
                <h3 id="modalHeader"><span class="glyphicon glyphicon-bookmark"></span> Создать новую категорию</h3>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="name">Имя</label>
                                <input type="text" class="form-control" id="name" placeholder="Введите название категории">
                            </div>
                            <div class="form-group">
                                <label for="desc">Описание</label>
                                <textarea class="form-control" rows="4" id="desc" placeholder="Введите описание"></textarea>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="btn btn-default center-block">
                                    Загрузить картинку
                                    <input type="file" class="form-control" hidden onchange="previewFile('previewImage')" accept="image/*,image/jpeg,image/png">
                                </label>
                            <br/>
                                <div class="thumbnail center-block category-thumbnail" id="previewImageBock" onmouseover="vibrantColorBG('previewImageBock')" onmouseout="restoreBG('previewImageBock')">
                                    <a class="btn btn-link">
                                        <img id="previewImage" class="img-responsive category-img" alt="..." src="~/Content/Images/picture.png">
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div>
                        <button id="modalOkButton"class="btn btn-success center-block">
                            <span class="glyphicon glyphicon-plus-sign"></span>
                            Создать
                        </button>
                    </div>
                    <br/>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="newSubjectModal" rolde="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span></button>
                <h3><span class="glyphicon glyphicon-bookmark"></span> Создать новый тест</h3>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="exampleInputName">Название теста</label>
                                <input type="text" class="form-control" id="exampleInputName" placeholder=" Введите имя">
                            </div>
                            <div class="form-group">
                                <label for="exampleSelectCategory">Категория</label>
                                <select class="form-control" id="exampleSelectCategory" required="required">
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="exampleSelectDuration">Продолжительность</label>
                                <select class="form-control" id="exampleSelectDuration" required="required">
                                    <option>1:00</option>
                                    <option>5:00</option>
                                    <option>10:00</option>
                                    <option>20:00</option>
                                    <option>30:00</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="exampleInputDescription">Описание теста</label>
                                <textarea class="form-control" id="exampleInputDescription" rows="6" cols="18" placeholder=" Введите описание"> </textarea>
                            </div>
                        </div>
                    </div>
                    <div>
                        <button class="btn btn-success center-block">
                            <span class="glyphicon glyphicon-plus-sign"></span>
                            Создать
                        </button>
                    </div>
                    <br/>
                </form>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/vibrant")

